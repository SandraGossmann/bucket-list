{% extends 'base.html.twig' %}

{% block body %}
    <h2>Wish List</h2>
    <section>
    {% for wish in wishes %}
        <a href="{{ path('wish_show', {'id' : wish.id}) }}">
            <p>{{ loop.index }}/ {{ wish.title }}</p>
        </a>
    {% endfor %}
    </section>    
{% endblock %}

{% block title %}
    {{ parent() }} | Wish List
{% endblock %}